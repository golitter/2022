/*Now I have a thought, why use arrary do not AC*/
#include <iostream>
using namespace std;
int month[] = {0,31,28,31,30,31,30,31,31,30,31,30,31};
bool compar(int a) {
  int year = a/10000;
  int md = a%10000;
  int moot = md/100;
  int day = md%100;
  if(year%4==0&&year%100==0||year%400==0){
    month[2] = 29;
  } else {
    month[2] = 28;
  }
  if(moot > 12 || moot < 1) {
    return false;
  }
  if(day > month[moot] || day < 1) {
    return false;
  }
  return true;
}
bool c2(int a) {
  int y = a/10000;
  int md = a%10000;
  int m = md/100;
  int d = md%100;
  if(d == m) {
    int y1 = y/100;
    int y2 = y%100;
    if(y1 == y2) {
      int mod = (d%10)*10 + d/10;
      if(mod == y1) {
        return true;
      } else {
        return false;
      }
    } else {
      return false;
    }
  } else {
    return false;
  }
}
int re4(int a) {
  int c = 4;
  int s = 0;
  while(c--) {
    int t = a%10;
    s = s*10 + t;
    a/=10;
  }
  return s;
}
int main()
{
  int n;
  cin>>n;
  n++;
  for(int i = n ; i < 100000000; i++) {
    if(i/10000 == re4(i) && compar(i)){
      n = i;
      cout<<n<<endl;
      break;
    }
  }
  for(; n < 100000000; n++) {
    if(compar(n)) {
      if(c2(n)) {
        cout<<n;
        break;
      }
    }
  }

}
