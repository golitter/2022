//the mutinomial has two special positions that the first position and the last position;
// So think of three situation : the first , the mid and the last;
//the first position do not has symbol "+"
// the last dont has "x^" or "x";
// last but one dont has "x^";
// and this code is laconic;
// So AC :
#include <bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int a;
    for(int i = n; i >= 0; i--) {
        cin>>a;
        if(a) { 
            if(i != n && a > 0) cout<<"+";
            if(abs(a) > 1|| i == 0) cout<<a;
            if(a == -1 && i) cout<<"-";
            if(i > 1) cout<<"x^";
            if(i == 1) cout<<"x";
            if(i > 1) cout<<i;
        }
    }
}
