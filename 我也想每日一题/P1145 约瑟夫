 * oh, this is new scope;
 * 约瑟夫问题;
 * significant: die must initial define 0;
 * because if you define 1, then humans :1 2 3 4 5 6;
 * Then, if one parameter add M to 6, and % , become 0;
 *  it is false;
 * Em..
 * Meanwhile the die man must record, or error;
 * such as:
 * G G G B B B;
 * 0 1 2 3 4 5 ;
 * m == 5; 
 * 0 1 2 3 X 5; 0 + 5 - 1  %  = 4, so 4 is die; die = 4;
 * m == 5;
 * 0 1 2 X X 5; 4 + 5 - 1  %  = 3, so 3 is die; die = 3;
 * m == 5;
 * 0 1 2 correct; 3 + 5 - 1  % = 3, so 5 is die; die = 3;
 * So Right!!!
 */
#include <bits/stdc++.h>
using namespace std;
int main()
{
    int k;
    cin>>k;
    int m = k;
    int find = 1, die = 0;
    while(find) {
        find = 0; die = 0;
        for(int i = 0; i < k; i++) {
            if((die+m-1)%(2*k - i) >= k) {
                die = (die+m-1)%(2*k - i);
            } else {
                find = 1;break;
            }
        }
        m++;
    }
    cout<<m-1;
}
