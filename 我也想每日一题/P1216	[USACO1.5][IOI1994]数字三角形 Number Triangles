// I misread the range ; 1000 think as 100;
// ;;;;;;;;;;;DP merely thus:
#include <bits/stdc++.h>
using namespace std;
int a[1001][1001];
int main()
{   
    int r;
    cin>>r;
    for(int i = 1; i <= r; i++) {
        for(int j = 1; j <= i; j++) {
            scanf("%d",&a[i][j]);
        }
    }
    for(int i = r-1; i >= 1; i--) {
        for(int j = 1; j <= i; j++) {
        a[i][j] += max(a[i+1][j],a[i+1][j+1]);       
        }
    }
    cout<<a[1][1];
}
