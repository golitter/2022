#include<bits/stdc++.h>
using namespace std;  
void qsort(int*a,int l,int r) //l == left ；r == right；
{
  if(l<r) {
    int i,j,point;
    i = l;
    j = r;
    point = a[l];
    while(i<j && a[j]>=point) j--;
    if(i<j) a[i++] = a[j];
    while(i<j && a[i]<point) i++;
    if(i<j) a[j--] = a[i];
    a[i] = point;
    qsort(a,l,i-1);//很重要 6 5 7 4 1；推出需要这一行；
    qsort(a,i+1,r);//很重要
  }
}
int main()
{
  int a[6]={3,6,13,31,9,27};// 
  int n = 6;
  qsort(a,0,5);
  for(int i=0;i<n;i++) cout<<a[i]<<endl;
}

