#include<bits/stdc++.h>
using namespace std;
void shell(int *a,int n)
{
    int i,j,temp,tag;
    for(tag = n/2; tag>0; tag/=2) {
        for(i = tag; i<n;i++) {
            temp = a[i];//插入排序
            for(j = i; j>=tag && temp<a[j-tag];j-=tag)//注意tag和i之间的联系哦
                a[j] = a[j-tag];//
                a[j] =temp;//
        }
    }
}
int main()
{
    int a[6] = {3,6,13,31,9,27};
    shell(a,6);
    for(int i = 0; i < 6; i++) cout<<a[i]<<endl;
}
/*
  这个刚开始难以理解，后来还是理解了。
  插入排序嘛；；
数据：  3 6 13 31 9 27；
下标：  0 1  2 3  4 5 ；
  tag = 3；//第一次tag；
{
31 与 3比较；由于 31>3 不改变；
        i++；
9 与 6比较；同理不变；
        i++；
    同理不变；
}
  tag = 1;//第二次tag；
{
 6 与 3，不变；
 13 与 6，不改变；
 31 与 13，不改变；
 9 与 31，变 ......（懒 https://www.bilibili.com/video/BV1BK4y1478X?from=search&seid=1547763944905941861&spm_id_from=333.337.0.0
*/
