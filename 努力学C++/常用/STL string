#include <iostream>
#include <vector>
#include <string>
#include <cstdio>
#include <algorithm>
using namespace std;

int main()
{
    /**
     * @brief 
     * sources: https://oi-wiki.org/lang/csl/string/;
     * 
     *  string str；
     *  string -- > char : str.c_str();
     * 获取长度： str.size() || str.length() || strlen(str.c_str());
     * 
     * 查找字符(串)第一次出现:
     *  str.find(ch) || str.find(str1) || str.find(str2, pos);  
     * 
     * 截取字串：
     *  str.substr(pos, len);
     * 
     * 插入 删除字符(串)：
     *  str.insert(index, count, ch) || str.insert(index, str1);
     *  str.erase(index, count) // count 可以省略，表示删除index及之后的字符；
     * 
     * 替换字符(串)：
     *  str.replace(pos, count, str1);
     *  str.replace(first, last, str1); // 迭代器；
     * 
     */
    string str("OI wiki"), t("OI"), ui("i");
        /**
     * @brief 
     * sources:B站 黑马STL视频笔记增添;
     * 增加：
     * rfind: 同find; 从后往前开始；
     * clear: 同erase;
     * append: 在s后面加上字符:
     *      append(str1) || append(s1, pos, count);
     * 
     */
    cout<<str.replace(2, 5, "")<<endl;
    cout<<str.replace(str.begin(), str.begin()+2, "NOI");
    return 0;
}
